# Azure Managed HSM Configuration
# Copy this file to .env and customize for your environment
# Usage: cp .env.example .env && nano .env

# =============================================================================
# HSM Settings
# =============================================================================

# Name of your Azure Managed HSM instance
HSM_NAME=ManagedHSMOpenSSLEngine

# Name of the key in the HSM (must have 'sign' permission)
HSM_KEY_NAME=myrsakey

# Azure tenant ID for authentication
AZURE_TENANT_ID=72f988bf-86f1-41af-91ab-2d7cd011db47

# =============================================================================
# Certificate Settings
# =============================================================================

# Subject for the generated certificate
CERT_CN=localhost
CERT_ORG=Microsoft
CERT_OU=Azure HSM Demo
CERT_COUNTRY=US
CERT_STATE=Washington
CERT_CITY=Redmond

# Certificate validity (days)
CERT_DAYS=365

# =============================================================================
# Nginx Settings
# =============================================================================

# Port for HTTPS server
NGINX_PORT=8443

# Server name (for SNI)
SERVER_NAME=localhost

# =============================================================================
# Logging (optional)
# =============================================================================

# Provider log file (empty = no file logging)
# AKV_LOG_FILE=./logs/akv_provider.log

# Provider log level (0=error, 1=warn, 2=info, 3=debug)
# AKV_LOG_LEVEL=2
