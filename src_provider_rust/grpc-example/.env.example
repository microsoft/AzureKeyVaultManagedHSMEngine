# Environment configuration for gRPC mTLS demo
# Copy this file to .env and configure

# Azure Managed HSM settings
HSM_NAME=ManagedHSMOpenSSLEngine
HSM_KEY_NAME=myrsakey
AZURE_TENANT_ID=72f988bf-86f1-41af-91ab-2d7cd011db47

# Server identity (CN for server certificate)
SERVER_CN=localhost
SERVER_HOST=127.0.0.1

# Client identity (CN for client certificate)
CLIENT_CN=grpc-client

# Certificate parameters
CERT_ORG=Microsoft
CERT_OU=Azure HSM gRPC Demo
CERT_COUNTRY=US
CERT_STATE=Washington
CERT_CITY=Redmond
CERT_DAYS=365

# Logging
AKV_LOG_LEVEL=debug
